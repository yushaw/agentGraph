# MCP Servers Configuration Example
# Copy this file to mcp_servers.yaml and customize for your setup

servers:
  # Test stdio server (for development/testing)
  test_stdio:
    command: "python"
    args: ["tests/mcp_servers/test_stdio_server.py"]
    enabled: true
    env: {}

    tools:
      echo:
        enabled: true
        always_available: false
        alias: "mcp_echo"
        description: "Echo back a message"

      add:
        enabled: true
        always_available: false
        alias: "mcp_add"
        description: "Add two numbers"

      get_time:
        enabled: true
        always_available: false
        alias: "mcp_time"
        description: "Get current server time"

