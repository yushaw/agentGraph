# Global settings
settings:
  # Lazy start: only start server on first tool call (recommended)
  lazy_start: true

  # Namespace strategy for tool names
  # - "prefix": mcp__server__tool (safe, no conflicts)
  # - "alias": use configured alias (cleaner names)
  namespace_strategy: "alias"

  # Server startup timeout (seconds)
  startup_timeout: 30

  # Default connection mode
  # - "stdio": Standard input/output (default)
  # - "sse": Server-Sent Events over HTTP
  default_connection_mode: "stdio"
